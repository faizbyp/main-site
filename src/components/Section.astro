---
import Card from "../components/Card.astro"

const {data, category} = Astro.props;
---

<section id={category.toLowerCase()} class="mb-20">
  <h2 class="text-4xl text-primary text-center font-bold mb-5">{category}</h2>
  <article class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 place-items-center">
    {data.slice(0, 3).map((w) => (
      <Card data={w} />
    ))}
    <a href={`/${category.toLowerCase()}`} class="hidden md:inline lg:hidden bg-primary text-white px-2 py-1 rounded">More {category}</a>
  </article>
  <div class="text-center mt-8">
    <a href={`/${category.toLowerCase()}`} class="inline md:hidden lg:inline bg-primary text-white text-xl px-2 py-1 rounded">More {category}</a>
  </div>
</section>