---
import misc from "../content/misc.json"
import Card from "../components/Card.astro"
import Layout from "../layouts/Layout.astro"
---

<Layout title="Miscellaneous">
  <h2 class="text-4xl text-primary text-center font-bold my-6">My Miscellaneous Works</h2>
  <article class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 place-items-center mb-12">
    {misc.map((w) => (
      <Card data={w} />
    ))}
  </article>
  <div class="flex justify-center">
    <a href="/" class="underline text-lg hover:text-primary focus:text-primary hover:scale-105 focus:scale-105 transition">Back to Home</a>
  </div>
</Layout>